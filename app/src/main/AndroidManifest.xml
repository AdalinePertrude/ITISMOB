<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ITISMOBMC0">
        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.ITISMOBMC0"/>
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.ITISMOBMC0">
        </activity>

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ITISMOBMC0">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.ITISMOBMC0" />

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.ViewRecipeActivity"
            android:exported="false"
            android:theme="@style/Theme.ITISMOBMC0" />

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.CalendarActivity"
            android:exported="false"
            android:theme="@style/Theme.ITISMOBMC0" />

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.CommentActivity"
            android:exported="false"
            android:theme="@style/Theme.ITISMOBMC0" />

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.ITISMOBMC0" />

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize" />

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.PublishedRecipeActivity"
            android:exported="false"
            android:theme="@style/Theme.ITISMOBMC0" />

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.SavedRecipeActivity"
            android:exported="false"
            android:theme="@style/Theme.ITISMOBMC0" />

        <activity
            android:name="com.mobdeve.s17.itismob_mc0.AddRecipeActivity"
            android:exported="false"
            android:theme="@style/Theme.ITISMOBMC0" />

        <receiver
            android:name=".RecipeNotificationReceiver"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".NotificationDismissReceiver"
            android:enabled="true"
            android:exported="false" />


    </application>


</manifest>